{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "description": "Schema for an xAPI Statement",
    "id":"http://localhost:8080/statements-schema.json",

    "type": "object",

    "required": ["actor", "verb", "object"],

    "additionalProperties": false,

    "properties": {
        "id": {
            "type": "string",
            "pattern": "^[0-9a-fA-F]{8}-[0-9a-fA-F]{4}-[1-5][0-9a-fA-F]{3}-[89abAB][0-9a-fA-F]{3}-[0-9a-fA-F]{12}$"
        },
        "actor": {
            "allOf": [
                { "$ref": "#/definitions/base-actor" }
            ],
            "oneOf": [
                { "$ref": "#/definitions/agent"},
                { "$ref": "#/definitions/group"}
            ]
        },
        "verb" : {"$ref": "#/definitions/verb"},
        "object": {"type": "object"},
        "result": { "$ref": "#/definitions/result" },
        "context": {"type": "object"},
        "timestamp": {
            "type": "string",
            "format": "date-time"
        },
        "stored": {
            "type": "string",
            "format": "date-time"
        },
        "authority": {"type": "object"},
        "version": {
            "type": "string",
            "pattern": "^1.0.[0-9]+$"
        },
        "attachments": {"type": "array"}
    },

    "definitions": {
        "base-actor": {
            "type": "object",
            "properties": {
                "name": {
                    "type": "string"
                }
            }
        },
        "agent": {
            "type": "object",
            "properties": {
                "objectType": {
                    "type": "string",
                    "pattern": "Agent"
                }
            },
            "allOf": [
                {"$ref":"#/definitions/ifi"}
            ],
            "oneOf": [
                { "required": ["mbox"] },
                { "required": ["mbox_sha1sum"] },
                { "required": ["openid"] },
                { "required": ["account"] }
            ]
        },
        "group": {
            "type": "object",
            "properties": {
                "objectType": {
                    "type": "string",
                    "pattern": "Group"
                }
            },
            "required": ["objectType"]
        },
        "ifi": {
            "oneOf": [
                { "$ref": "#/definitions/mbox" },
                { "$ref": "#/definitions/mbox_sha1sum" },
                { "$ref": "#/definitions/openid" },
                { "$ref": "#/definitions/account" }
            ]
        },
        "mbox": {
            "properties": {
                "mbox": {
                    "type": "string",
                    "pattern": "mailto:\\S+@\\S+\\.\\S+"
                }
            },
            "required": ["mbox"]
        },
        "mbox_sha1sum": {
            "properties": {
                "mbox_sha1sum": {
                    "type": "string"
                }
            },
            "required": ["mbox_sha1sum"]
        },
        "openid": {
            "properties": {
                "openid": {
                    "type": "string",
                    "pattern": "^[\\S]+:\\/\\/?(?!\\/)[\\S]+$"
                }
            },
            "required": ["openid"]
        },
        "account": {
            "properties": {
                "account": {
                    "type": "object",
                    "properties": {
                        "homePage": {
                            "type": "string",
                            "pattern": "^[\\S]+:\\/\\/?(?!\\/)[\\S]+$"
                        },
                        "name": {
                            "type": "string"
                        }
                    },
                    "required": [ "homePage", "name" ]
                }
            },
            "required": ["account"]
        },
        "verb": {
            "properties": {
                "id": {
                    "type": "string",
                    "pattern": "^[\\S]+:\\/\\/?(?!\\/)[\\S]+$"
                },
                "display": {
                    "type": "object"
                }
            },
            "required": [ "id" ],
            "additionalProperties": false
        },
        "object": {},
        "result": {
            "type": "object",
            "properties": {
                "score": { "$ref": "#/definitions/score" },
                "success": { "type": "boolean" },
                "completion": { "type": "boolean" },
                "response": { "type": "string" },
                "duration": {
                    "type": "string",
                    "pattern": "^P(?=\\w*\\d)(?:\\d+Y|Y)?(?:\\d+M|M)?(?:\\d+W|W)?(?:\\d+D|D)?(?:T(?:\\d+H|H)?(?:\\d+M|M)?(?:\\d+(?:\\Â­.\\d{1,2})?S|S)?)?$"
                },
                "extensions": { "$ref": "#/definitions/extensions" }
            },
            "additionalProperties": false
        },
        "score": {
            "type": "object",
            "properties": {
                "scaled": {
                    "type": "number",
                    "minimum": -1,
                    "maximum": 1
                },
                "raw": { "type": "number" },
                "min": { "type": "number" },
                "max": { "type": "number" }
            },
            "additionalProperties": false
        },
        "extensions": {
            "type": "object",
            "patternProperties": {
                "^[\\S]+:\\/\\/?(?!\\/)[\\S]+$": { "type": "string" }
            },
            "additionalProperties": false
        }
    }
}
