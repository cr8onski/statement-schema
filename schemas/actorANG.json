{

    "$schema": "http://json-schema.org/draft-04/schema#",
    "description": "Schema for an xAPI Actor Property",
    "id":"http://localhost:8080/actor-schema.json",

    "type": "object",

    "additionalProperties": false,

    "properties": {
        "actor": { "$ref": "#/definitions/actor" }
    },

    "definitions": {
        "actor": {
            "additionalProperties": false,
            "properties": {
                "objectType": { "type": "string", "pattern": "Agent||Group" },
                "name": { "type": "string" },
                "member": { "type": "array" },
                "mbox": { "type": "string" },
                "mbox_sha1sum": { "type": "string" },
                "openid": { "type": "string" },
                "account": { "type": "object" }
            }
        }
    }

}
