{

    "$schema": "http://json-schema.org/draft-04/schema#",
    "description": "Schema for an xAPI Version Property",
    "id":"http://localhost:8080/version-schema.json",

    "type": "object",

    "additionalProperties": false,

    "properties": {
        "version": { "$ref": "#/definitions/version" }
    },

    "definitions": {

        "version": {
            "type": "string",
            "pattern": "^1.0.[0-9]+$"
        },

    }
}
