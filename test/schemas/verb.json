{

    "$schema": "http://json-schema.org/draft-04/schema#",
    "description": "Schema for an xAPI Verb Property",
    "id":"http://localhost:8080/verb-schema.json",

    "type": "object",

    "additionalProperties": false,

    "properties": {
        "id": {
            "type": "string",
            "pattern": "^[\\S]+:\\/\\/?(?!\\/)[\\S]+$"
        },
        "display": {
            "type": "object",
            "patternProperties": {
                "^[a-z]{2,3}(?:-[A-Z]{2,3}(?:-[a-zA-Z]{4})?)?$": { "type": "string" }
            },
            "additionalProperties": false
        }
    },
    "required": [ "id" ]
}
